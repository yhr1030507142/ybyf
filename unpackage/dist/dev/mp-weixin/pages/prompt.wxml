<view class="prompt-box" hidden="{{isHidden}}"><view class="prompt-content contentFontColor"><view class="prompt-title">{{title}}</view><view class="prompt-text">{{text}}</view><input class="prompt-input" type="text" data-event-opts="{{[['input',[['_input',['$event']]]]]}}" value="{{cost}}" bindinput="__e"/><view class="prompt-btn-group"><button data-event-opts="{{[['tap',[['_cancel',['$event']]]]]}}" class="btn-item prompt-cancel-btn contentFontColor" bindtap="__e">{{btn_cancel}}</button><button data-event-opts="{{[['tap',[['_confirm',['$event']]]]]}}" class="btn-item prompt-certain-btn" bindtap="__e">{{btn_certain}}</button></view></view></view>